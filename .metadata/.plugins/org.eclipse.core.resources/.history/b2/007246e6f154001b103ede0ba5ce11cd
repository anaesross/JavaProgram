package application;

import java.util.Locale;
import java.util.Scanner;

public class Program {
	
	public static final double PI = 3.14159; //valor constante ele nao pode ser alterado
	//padrão de nome java para constantes é maiúsculo
	
	public static void main(String[] args) {
		Locale.setDefault(Locale.US);
		Scanner sc = new Scanner(System.in);
		
		System.out.println("Digite o raio: ");
		double raio = sc.nextDouble();
		
		double c = circunferencia(raio);
		
		double v = volume(raio);
		
		System.out.printf("Circunferência: %.2fzn" , c);
		System.out.printf("Volume: %.2fzn" , v);
		
		System.out.printf("PI: %.2fzn", PI);
		
		sc.close();

	}
	
	public static double circunferencia (double raio) {
		return 2.0 * PI * raio;
	}
	
	public static double volume (double raio) {
		return 4.0 * PI * raio * raio * raio /3.0;
	}
}
