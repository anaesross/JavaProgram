package application;

import java.util.Locale;
import java.util.Scanner;

import entities.Retangulo;

public class Program {

	public static void main(String[] args) {
		Locale.setDefault(Locale.US);
		Scanner sc = new Scanner(System.in);
		
		Retangulo retangulo = new Retangulo();
		
		
		System.out.println("Insira a medida da altura do retângulo: ");
		retangulo.altura = sc.nextDouble();
		System.out.println("Insira a medida da largura do retângulo: ");
		retangulo.largura = sc.nextDouble();
		
		retangulo.area();
		retangulo.perimetro();
		retangulo.diagonal();
		System.out.printf("Area = %.2f" + retangulo.area + "\nPerimetro = %.2f" + retangulo.perimetro + "\nDiagonal = %.2f" + retangulo.diagonal);
		
		sc.close();

	}

}
