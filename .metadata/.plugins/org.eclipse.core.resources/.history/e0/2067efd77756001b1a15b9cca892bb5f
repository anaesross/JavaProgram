package application;

import java.util.Locale;
import java.util.Scanner;

public class Program {

	public static void main(String[] args) {
		Locale.setDefault(Locale.US);
		Scanner sc = new Scanner(System.in);
		
		
		System.out.println("Digite o numero de linhas: ");
		int m = sc.nextInt();
		
		System.out.println("Digite o numero de colunas: ");
		int n = sc.nextInt();
		
		
		System.out.println("Digite o valor a ser encontrado: ");
		int x = sc.nextInt();
		
		int[][] matriz = new int[m][n];
		
		for(int i = 0; i<m; i++) {
			for(int j = 0; j<n; j++) {
				matriz[i][j] = sc.nextInt();
			}
		}
		
		for(int i = 0; i<m; i++) {
			System.out.println("Posição: " + matriz[i][i]);
			System.out.println("Esquerda: " + matriz[i][i]);
			System.out.println("Direita: " + matriz[i][i]);
			System.out.println("Baixo: " + matriz[i][i]);
			System.out.println("Posição: " + matriz[i][i]);
			System.out.println("Esquerda: " + matriz[i][i]);
			System.out.println("Acima: " + matriz[i][i]);
			System.out.println("Baixo: " + matriz[i][i]);
			
		}
		
		sc.close();

	}

}
