package entities;

public class Product {
	
	/*public String name;
	public double price;
	public int quantity;*/
	
	//Encapsular os atributos:
	private String name;
	private double price;
	private int quantity;
	
	//construtor padrão
	public Product() {
	}
	//criando dois métodos semelhantes , sobrecarga = disponibilizar mais de uma versão da mesma operação
	//a diferença entre elas vão ser os parâmetros
	public Product(String name, double price, int quantity) {
		this.name = name; //this.name referencia o próprio objeto - linha 5 - name referencia o parametro passado na função
		this.price = price;
		this.quantity = quantity;
	}
	
	//criando outro método - sobrecarga
	public Product(String name, double price) {
		this.name = name; //this.name referencia o próprio objeto - linha 5 - name referencia o parametro passado na função
		this.price = price;
		//this.quantity = 0; //opcional, ele ja cria o atributo com valor 0 (int)
	}
	//método setters
	public void setName(String name) {
		this.name = name;
	}
	//método getters 
	public String getName() {
		return name;
	}

	public double totalValueInStock() {
		return price * quantity;
	}

	public void addProducts(int quantity) {
		this.quantity += quantity;
	}

	public void removeProducts(int quantity) {
		this.quantity -= quantity;
	}

	public String toString() {
		return name + ", $ " + String.format("%.2f", price) + ", " + quantity + " units, Total: $ "
				+ String.format("%.2f", totalValueInStock());
	}
}