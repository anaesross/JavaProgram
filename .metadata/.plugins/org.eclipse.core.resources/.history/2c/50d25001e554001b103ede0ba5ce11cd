package entities;

public class Aluno {
	
	public String nome;
	public double n1;
	public double n2;
	public double n3;
	public double mediaFinal;
	
	public double media() {
		double media = n1+n2+n3;
		if(media > 60) {
			System.out.println("Nota final: " + media + "\nPassou!");
		} else {
			double pontos = 100 - media;
			System.out.println("Nota final: " + media + "\nFalhou" + "\nFaltou:" + pontos + " pontos");
		}
		
		return media;
	}
}
